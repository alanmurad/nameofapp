<div class="contact">
	<h1>Contact Us</h1>
	<p>Want to get in touch? This is where you can find our contact details.</p>
	
	<%= flash[:notice] %>

	<%= form_tag("/static_pages/thank_you") do %>
	<div class="row">
	  <div class="col-md-4">
	    <div class="form-group">
	      <%= label_tag :name %>
	      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
	    </div>        
	    <div class="form-group">
	      <%= label_tag :email, "Email Address" %>
	      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
	    </div>
	    <div class="form-group">
	      <%= label_tag :message %>
	      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
	    </div>
	    <%= submit_tag "Send", class: "btn btn-primary send-button" %>
			<% end %>
	  </div>
	</div>
</div>

